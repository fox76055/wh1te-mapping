<DefaultWindow xmlns="https://spacestation14.io" MinSize="640 220" Title="{Loc 'finance-issuance-window-title'}">
	<BoxContainer Orientation="Vertical" Margin="12" SeparationOverride="10">
		<BoxContainer SeparationOverride="16" HorizontalExpand="True" VerticalExpand="True">
			<PanelContainer HorizontalExpand="True" VerticalExpand="True" SizeFlagsStretchRatio="1">
				<BoxContainer Orientation="Vertical" SeparationOverride="8">
					<GridContainer Columns="2">
						<Label Text="{Loc 'finance-ident'}" />
						<Label Name="Ident" />
					</GridContainer>
					<!-- Рейтинг: в одну строку, как в окне рейтинга -->
					<GridContainer Columns="2">
						<Label Text="{Loc 'finance-rating'}" />
						<BoxContainer Orientation="Horizontal" SeparationOverride="8">
							<ProgressBar Name="ScoreBar" MinValue="0" MaxValue="100" Value="0" SetSize="220 16" />
						</BoxContainer>
					</GridContainer>
					<GridContainer Columns="2">
						<Label Text="{Loc 'finance-max-loan'}" />
						<Label Name="MaxLoan" />
						<Label Text="{Loc 'finance-active-loans'}" />
						<Label Name="ActiveLoans" />
					</GridContainer>
				</BoxContainer>
			</PanelContainer>

			<PanelContainer HorizontalExpand="True" VerticalExpand="True" SizeFlagsStretchRatio="1">
				<BoxContainer Orientation="Vertical" SeparationOverride="8">
					<BoxContainer SeparationOverride="8">
						<LineEdit PlaceHolder="{Loc 'finance-issue-amount-placeholder'}" Name="Amount" HorizontalExpand="True" />
						<Button Text="{Loc 'finance-issue-button'}" Name="IssueBtn" />
					</BoxContainer>
					<Label Name="Validation" Visible="False" />
					<Label Name="Banner" Visible="False" />
					<!-- Декоративный логотип внутри правой колонки -->
					<TextureRect TexturePath="/Textures/_Lua/Icon_bank/Nanotrahen_logo_invert.png"
						Modulate="#B4FFFFFF"
						TextureScale="0.3 0.3"
						Stretch="KeepCentered"
						HorizontalExpand="True"
						VerticalExpand="True"
						CanShrink="true"/>
				</BoxContainer>
			</PanelContainer>
		</BoxContainer>
	</BoxContainer>
</DefaultWindow>


