<DefaultWindow xmlns="https://spacestation14.io" MinSize="480 260" Title="{Loc 'finance-rating-window-title'}">
  <BoxContainer Orientation="Vertical" Margin="12" SeparationOverride="8">
    <BoxContainer Orientation="Horizontal" VerticalAlignment="Top" HorizontalExpand="True">
      <TextureRect TexturePath="/Textures/_Lua/Icon_bank/Nanotrahen_logo_invert.png" Modulate="#B4FFFFFF" TextureScale="0.09 0.09" CanShrink="true" Stretch="Keep" Margin="0 0 6 0"/>
      <Control HorizontalExpand="True"/>
      <Button Text="{Loc 'finance-check'}" Name="CheckBtn" />
    </BoxContainer>
    <PanelContainer StyleClasses="LowDivider"/>

    <!-- Идентификация -->
    <GridContainer Columns="2">
      <Label Text="{Loc 'finance-ident'}" />
      <Label Name="Ident" Text="—" />
    </GridContainer>

    <!-- Карточка результата -->
    <PanelContainer>
      <BoxContainer Orientation="Vertical" Margin="8" SeparationOverride="6">
        <GridContainer Columns="2">
          <Label Text="{Loc 'finance-rating'}"/>
          <BoxContainer Orientation="Horizontal" SeparationOverride="8">
            <ProgressBar Name="ScoreBar" MinValue="0" MaxValue="100" Value="0" SetSize="220 16"/>
            <Label Name="ScoreVal" Text="0"/>
          </BoxContainer>
          <Label Text="{Loc 'finance-max-loan'}"/>
          <Label Name="MaxLoan" Text="0"/>
          <Label Text="{Loc 'finance-active-loans'}"/>
          <Label Name="ActiveLoans" Text="0"/>
          <Label Text="{Loc 'finance-next-charge'}"/>
          <Label Name="NextCharge" Text="—"/>
        </GridContainer>
        <Label Name="Updated" Text="Обновлено: —" HorizontalAlignment="Right" />
      </BoxContainer>
    </PanelContainer>
  </BoxContainer>
</DefaultWindow>
