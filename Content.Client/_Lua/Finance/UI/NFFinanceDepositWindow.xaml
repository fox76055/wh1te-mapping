<DefaultWindow xmlns="https://spacestation14.io" MinSize="720 520" Title="{Loc 'finance-deposit-window-title'}">
  <BoxContainer Orientation="Vertical" Margin="12" SeparationOverride="8">
    <!-- Статусы счёта -->
    <GridContainer Columns="4" HSeparationOverride="16" VSeparationOverride="4">
      <Label Text="{Loc 'finance-deposit-label-balance'}" />
      <Label Name="Balance" Text="—" />
      <Label Text="{Loc 'finance-deposit-label-available'}" />
      <Label Name="Available" Text="—" />

      <Label Text="{Loc 'finance-deposit-label-due'}" />
      <Label Name="Due" Text="—" />
      <Label Text="{Loc 'finance-deposit-label-hold'}" />
      <Label Name="Hold" Text="—" />

      <Label Text="{Loc 'finance-deposit-label-next'}" />
      <Label Name="Eta" Text="—" />
      <Control />
      <Control />
    </GridContainer>

    <!-- Открытие вклада -->
    <PanelContainer StyleClasses="LowDivider">
      <BoxContainer Orientation="Vertical" SeparationOverride="6">
        <Label Text="{Loc 'finance-deposit-open-title'}" />
        <!-- Первая строка: сумма + действие -->
        <BoxContainer SeparationOverride="8">
          <LineEdit PlaceHolder="{Loc 'finance-deposit-open-amount-placeholder'}" Name="OpenAmount" HorizontalExpand="True" />
          <Button Text="{Loc 'finance-deposit-open-button'}" Name="OpenBtn" />
        </BoxContainer>
        <!-- Вторая строка: параметры и пресеты -->
        <BoxContainer SeparationOverride="8">
          <Label Text="{Loc 'finance-deposit-term'}" />
          <OptionButton Name="Term" />
          <Label Text="{Loc 'finance-deposit-rate'}" />
          <OptionButton Name="Rate" />
          <BoxContainer SeparationOverride="4">
            <Button Text="10k" Name="Preset10" />
            <Button Text="50k" Name="Preset50" />
            <Button Text="100k" Name="Preset100" />
          </BoxContainer>
        </BoxContainer>
      </BoxContainer>
    </PanelContainer>

    <!-- Управление вкладами -->
    <PanelContainer StyleClasses="LowDivider">
      <BoxContainer Orientation="Vertical" SeparationOverride="6">
        <Label Text="{Loc 'finance-deposit-manage-title'}" />
        <!-- Закрыть вклад -->
        <BoxContainer SeparationOverride="8">
          <LineEdit PlaceHolder="{Loc 'finance-deposit-close-id-placeholder'}" Name="CloseId" HorizontalExpand="True" SizeFlagsStretchRatio="3" />
          <Button Text="{Loc 'finance-deposit-close-button'}" Name="CloseBtn" SizeFlagsStretchRatio="2" />
        </BoxContainer>
        <!-- Пополнить вклад -->
        <BoxContainer SeparationOverride="8">
          <LineEdit PlaceHolder="{Loc 'finance-deposit-topup-id-placeholder'}" Name="TopUpId" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
          <LineEdit PlaceHolder="{Loc 'finance-deposit-amount-placeholder'}" Name="TopUpAmount" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
          <Button Text="{Loc 'finance-deposit-topup-button'}" Name="TopUpBtn" SizeFlagsStretchRatio="2" />
        </BoxContainer>
        <!-- Частичное снятие -->
        <BoxContainer SeparationOverride="8">
          <LineEdit PlaceHolder="{Loc 'finance-deposit-part-id-placeholder'}" Name="PartWithdrawId" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
          <LineEdit PlaceHolder="{Loc 'finance-deposit-amount-placeholder'}" Name="PartWithdrawAmount" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
          <Button Text="{Loc 'finance-deposit-part-button'}" Name="PartWithdrawBtn" SizeFlagsStretchRatio="2" />
        </BoxContainer>
      </BoxContainer>
    </PanelContainer>

    <!-- Список вкладов -->
    <BoxContainer SeparationOverride="8">
      <Label Text="{Loc 'finance-deposit-list-title'}" />
      <Control HorizontalExpand="True" />
      <Button Text="{Loc 'finance-refresh'}" Name="RefreshBtn" />
    </BoxContainer>
    <ItemList Name="DepositsList" SelectMode="Single" VerticalExpand="False" MinSize="0 120" />
  </BoxContainer>
</DefaultWindow>
