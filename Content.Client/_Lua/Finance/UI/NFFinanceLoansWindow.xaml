<DefaultWindow xmlns="https://spacestation14.io" MinSize="840 460" Title="{Loc 'finance-loans-window-title'}">
  <BoxContainer Orientation="Vertical" Margin="12" SeparationOverride="8">
    <BoxContainer SeparationOverride="8" HorizontalExpand="True">
      <Button Text="{Loc 'finance-loans-tab-loans'}" Name="TabLoans" />
      <Button Text="{Loc 'finance-loans-tab-deposits'}" Name="TabDeposits" />
      <Control HorizontalExpand="True" />
      <LineEdit Name="Search" PlaceHolder="{Loc 'finance-search-placeholder'}" HorizontalExpand="True" />
      <OptionButton Name="Sort" />
      <Button Text="{Loc 'finance-refresh'}" Name="RefreshBtn" />
    </BoxContainer>

    <!-- Липкий заголовок таблицы кредитов -->
    <PanelContainer StyleClasses="LowDivider" Name="HeaderLoans">
      <GridContainer Columns="4" HSeparationOverride="16" VSeparationOverride="4">
        <Label Text="{Loc 'finance-loans-col-name'}" HorizontalExpand="True" SizeFlagsStretchRatio="4" />
        <Label Text="{Loc 'finance-loans-col-amount'}" HorizontalExpand="True" SizeFlagsStretchRatio="1" />
        <Label Text="{Loc 'finance-loans-col-until-charge'}" HorizontalExpand="True" SizeFlagsStretchRatio="3" />
        <Label Text="{Loc 'finance-col-yupi'}" HorizontalExpand="True" SizeFlagsStretchRatio="4" />
      </GridContainer>
    </PanelContainer>

    <!-- Липкий заголовок таблицы вкладов -->
    <PanelContainer StyleClasses="LowDivider" Name="HeaderDeposits" Visible="False">
      <GridContainer Columns="6" HSeparationOverride="16" VSeparationOverride="4">
        <Label Text="{Loc 'finance-deposits-col-name'}" HorizontalExpand="True" SizeFlagsStretchRatio="3" />
        <Label Text="{Loc 'finance-deposits-col-total'}" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
        <Label Text="{Loc 'finance-deposits-col-nextcap'}" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
        <Label Text="{Loc 'finance-deposits-col-stop'}" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
        <Label Text="{Loc 'finance-deposits-col-rate'}" HorizontalExpand="True" SizeFlagsStretchRatio="2" />
        <Label Text="{Loc 'finance-deposits-col-yupi'}" HorizontalExpand="True" SizeFlagsStretchRatio="3" />
      </GridContainer>
    </PanelContainer>

    <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
      <GridContainer Name="Rows" Columns="6" HSeparationOverride="16" VSeparationOverride="8" />
    </ScrollContainer>
  </BoxContainer>
</DefaultWindow>
