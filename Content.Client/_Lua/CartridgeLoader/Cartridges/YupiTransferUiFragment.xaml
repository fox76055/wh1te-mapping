<!--
  YupiTransferUiFragment
  Purpose: In‑game peer‑to‑peer transfers ("YUPI") cartridge UI for PDA.
  Provides: own code display/copy, balance readout, target code + amount inputs,
            send transfer and repay loan actions, and a branded footer.
  Notes:
  - Static labels are localized from code-behind via Loc keys (yupi-ui-*).
  - Copy button doubles as current player's YUPI code display.
-->
<cartridges:YupiTransferUiFragment
    xmlns:cartridges="clr-namespace:Content.Client._Lua.CartridgeLoader.Cartridges;assembly=Content.Client"
    xmlns="https://spacestation14.io"
    Orientation="Vertical"
    Margin="5"
    VerticalExpand="True">
  <BoxContainer Orientation="Horizontal">
    <Label Name="LblOwnCodeTitle" Text="Ваш ЮПИ:"/>
    <Button Name="CopyCodeButton" Text="------"/>
  </BoxContainer>
  <BoxContainer Orientation="Horizontal">
    <Label Name="LblBalanceTitle" Text="Баланс:"/>
    <Label Name="Balance" Text="0"/>
  </BoxContainer>
  <BoxContainer Orientation="Horizontal">
    <Label Name="LblDueTitle" Text="Задолженность по кредиту:"/>
    <Label Name="Due" Text="0"/>
  </BoxContainer>
  <BoxContainer Orientation="Horizontal">
    <Label Name="LblTargetCodeTitle" Text="Код получателя:"/>
    <LineEdit Name="CodeInput" PlaceHolder="H2U2D8" HorizontalExpand="True"/>
  </BoxContainer>
  <BoxContainer Orientation="Horizontal">
    <Label Name="LblAmountTitle" Text="Сумма:"/>
    <LineEdit Name="AmountInput" PlaceHolder="1000" HorizontalExpand="True"/>
  </BoxContainer>
  <BoxContainer Orientation="Horizontal" SeparationOverride="6">
    <Button Name="SendButton" Text="Отправить" HorizontalExpand="True"/>
    <Button Name="RepayButton" Text="Погасить кредит" HorizontalExpand="True"/>
  </BoxContainer>
  <Control VerticalExpand="True"/>
  <!-- Brand footer/logo (purely decorative) -->
  <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5 0 0">
    <TextureRect Name="BankLogo"
                 TexturePath="/Textures/_Lua/Icon_bank/Nanotrahen_logo_invert.png"
                 Stretch="KeepAspectCentered"
                 SetSize="256 128"/>
  </BoxContainer>
</cartridges:YupiTransferUiFragment>
